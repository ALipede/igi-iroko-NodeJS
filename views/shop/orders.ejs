<%- include('../includes/head.ejs') %>
</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
    <h1><%= pageTitle %></h1>

    <% if (orders.length <= 0) { %>
    <h2>Nothing there!</h2>
    <% } else { %>
    <ul>
      <% orders.forEach(order => { %>
      <li>
        <h2><%= order.id %></h2>
        <ol>
          <% order.products.forEach(product => { %>
          <li><%= product.title %> (<%= product.orderItem.quantity %>)</li>
          <% }) %>
        </ol>
      </li>
      <% }) %>
    </ul>
    <% } %>
  </main>
  <%- include('../includes/end.ejs') %>